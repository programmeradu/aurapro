# AURA Command Center - Production Environment Configuration

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="AURA Command Center"
NEXT_PUBLIC_APP_VERSION="2.1.0"
NEXT_PUBLIC_APP_DESCRIPTION="Ghana Transport Intelligence System"

# API Configuration
NEXT_PUBLIC_API_URL=https://api.aura-transport.gov.gh
NEXT_PUBLIC_WS_URL=wss://ws.aura-transport.gov.gh
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Database
DATABASE_URL=postgresql://aura_user:${DATABASE_PASSWORD}@prod-db.aura-transport.gov.gh:5432/aura_production
DATABASE_POOL_SIZE=20
DATABASE_SSL=true

# Redis Cache
REDIS_URL=redis://prod-cache.aura-transport.gov.gh:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TTL=300

# Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
SESSION_SECRET=${SESSION_SECRET}
BCRYPT_ROUNDS=12

# External Services
MAPBOX_ACCESS_TOKEN=${MAPBOX_ACCESS_TOKEN}
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
WEATHER_API_KEY=${WEATHER_API_KEY}

# Monitoring & Analytics
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}

# Email Service
SMTP_HOST=smtp.gov.gh
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM="noreply@aura-transport.gov.gh"

# File Storage
AWS_REGION=us-east-1
AWS_S3_BUCKET=aura-transport-prod
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Security
CORS_ORIGIN=https://aura-transport.gov.gh
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
HELMET_CSP_ENABLED=true

# Performance
CACHE_ENABLED=true
COMPRESSION_ENABLED=true
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/aura/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_REAL_TIME_ENABLED=true
FEATURE_ML_PREDICTIONS_ENABLED=true
FEATURE_CRISIS_MANAGEMENT_ENABLED=true
FEATURE_MOBILE_APP_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=aura-transport-backups

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/aura-transport.crt
SSL_KEY_PATH=/etc/ssl/private/aura-transport.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Load Balancer
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30000
LB_STICKY_SESSIONS=true

# CDN
CDN_URL=https://cdn.aura-transport.gov.gh
CDN_ENABLED=true
CDN_CACHE_TTL=86400

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alerts
ALERT_EMAIL=alerts@transport.gov.gh
ALERT_SLACK_WEBHOOK=${SLACK_WEBHOOK_URL}
ALERT_SMS_ENABLED=true

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST=true
