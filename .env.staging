# AURA Command Center - Staging Environment Configuration

# Application
NODE_ENV=staging
NEXT_PUBLIC_APP_NAME="AURA Command Center (Staging)"
NEXT_PUBLIC_APP_VERSION="2.1.0-staging"
NEXT_PUBLIC_APP_DESCRIPTION="Ghana Transport Intelligence System - Staging"

# API Configuration
NEXT_PUBLIC_API_URL=https://staging-api.aura-transport.gov.gh
NEXT_PUBLIC_WS_URL=wss://staging-ws.aura-transport.gov.gh
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Database
DATABASE_URL=postgresql://aura_staging:${DATABASE_PASSWORD}@staging-db.aura-transport.gov.gh:5432/aura_staging
DATABASE_POOL_SIZE=10
DATABASE_SSL=true

# Redis Cache
REDIS_URL=redis://staging-cache.aura-transport.gov.gh:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TTL=300

# Authentication
JWT_SECRET=${JWT_SECRET_STAGING}
JWT_EXPIRES_IN=24h
SESSION_SECRET=${SESSION_SECRET_STAGING}
BCRYPT_ROUNDS=10

# External Services
MAPBOX_ACCESS_TOKEN=${MAPBOX_ACCESS_TOKEN_STAGING}
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY_STAGING}
WEATHER_API_KEY=${WEATHER_API_KEY_STAGING}

# Monitoring & Analytics
SENTRY_DSN=${SENTRY_DSN_STAGING}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID_STAGING}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY_STAGING}

# Email Service
SMTP_HOST=smtp-staging.gov.gh
SMTP_PORT=587
SMTP_USER=${SMTP_USER_STAGING}
SMTP_PASSWORD=${SMTP_PASSWORD_STAGING}
SMTP_FROM="staging-noreply@aura-transport.gov.gh"

# File Storage
AWS_REGION=us-east-1
AWS_S3_BUCKET=aura-transport-staging
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_STAGING}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_STAGING}

# Security
CORS_ORIGIN=https://staging.aura-transport.gov.gh
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
HELMET_CSP_ENABLED=true

# Performance
CACHE_ENABLED=true
COMPRESSION_ENABLED=true
STATIC_CACHE_TTL=3600
API_CACHE_TTL=60

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=/var/log/aura/staging.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_REAL_TIME_ENABLED=true
FEATURE_ML_PREDICTIONS_ENABLED=true
FEATURE_CRISIS_MANAGEMENT_ENABLED=true
FEATURE_MOBILE_APP_ENABLED=false

# Testing
TEST_DATA_ENABLED=true
MOCK_EXTERNAL_APIS=false
DEBUG_MODE=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=aura-transport-staging-backups

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/staging-aura-transport.crt
SSL_KEY_PATH=/etc/ssl/private/staging-aura-transport.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Load Balancer
LB_HEALTH_CHECK_PATH=/health
LB_TIMEOUT=30000
LB_STICKY_SESSIONS=false

# CDN
CDN_URL=https://staging-cdn.aura-transport.gov.gh
CDN_ENABLED=false
CDN_CACHE_TTL=3600

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alerts
ALERT_EMAIL=staging-alerts@transport.gov.gh
ALERT_SLACK_WEBHOOK=${SLACK_WEBHOOK_URL_STAGING}
ALERT_SMS_ENABLED=false

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=90
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST=true
