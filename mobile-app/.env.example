# AURA Mobile Commuter App Environment Variables

# App Configuration
NEXT_PUBLIC_APP_NAME="AURA Commuter"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://aura-commuter.vercel.app"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Mapbox Configuration
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="your_mapbox_access_token_here"
MAPBOX_SECRET_TOKEN="your_mapbox_secret_token_here"

# Authentication
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your_nextauth_secret_here"
JWT_SECRET="your_jwt_secret_here"

# Database (if using direct database connection)
DATABASE_URL="postgresql://username:password@localhost:5432/aura_commuter"

# External APIs
GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"
WEATHER_API_KEY="your_weather_api_key_here"

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY="your_vapid_public_key_here"
VAPID_PRIVATE_KEY="your_vapid_private_key_here"
VAPID_SUBJECT="mailto:your-email@example.com"

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="your_hotjar_id_here"

# Error Tracking
SENTRY_DSN="your_sentry_dsn_here"
NEXT_PUBLIC_SENTRY_DSN="your_public_sentry_dsn_here"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="true"
NEXT_PUBLIC_ENABLE_COMMUNITY_FEATURES="true"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"

# Ghana-Specific Configuration
NEXT_PUBLIC_DEFAULT_COUNTRY="GH"
NEXT_PUBLIC_DEFAULT_CURRENCY="GHS"
NEXT_PUBLIC_DEFAULT_LANGUAGE="en-GH"
NEXT_PUBLIC_DEFAULT_TIMEZONE="Africa/Accra"

# Map Configuration
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LAT="5.6037"
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LNG="-0.1870"
NEXT_PUBLIC_DEFAULT_MAP_ZOOM="12"

# Transport Configuration
NEXT_PUBLIC_MAX_WALKING_DISTANCE="1000"
NEXT_PUBLIC_MAX_JOURNEY_TIME="120"
NEXT_PUBLIC_DEFAULT_TRANSPORT_MODES="trotro,bus,walking"

# Community Features
NEXT_PUBLIC_MAX_REPORT_PHOTOS="5"
NEXT_PUBLIC_MAX_REPORT_SIZE="10MB"
NEXT_PUBLIC_COMMUNITY_MODERATION="true"

# Performance
NEXT_PUBLIC_CACHE_DURATION="300000"
NEXT_PUBLIC_API_TIMEOUT="10000"
NEXT_PUBLIC_RETRY_ATTEMPTS="3"

# Security
NEXT_PUBLIC_CSP_REPORT_URI="/api/csp-report"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Third-party Services
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_email_password"

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET="aura-commuter-uploads"
STORAGE_ACCESS_KEY="your_storage_access_key"
STORAGE_SECRET_KEY="your_storage_secret_key"
STORAGE_REGION="us-east-1"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Monitoring
UPTIME_ROBOT_API_KEY="your_uptime_robot_api_key"
NEW_RELIC_LICENSE_KEY="your_new_relic_license_key"

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE="@aura_commuter"
NEXT_PUBLIC_FACEBOOK_PAGE="aura.commuter"
NEXT_PUBLIC_INSTAGRAM_HANDLE="@aura_commuter"

# App Store
NEXT_PUBLIC_PLAY_STORE_URL="https://play.google.com/store/apps/details?id=com.aura.commuter"
NEXT_PUBLIC_APP_STORE_URL="https://apps.apple.com/app/aura-commuter/id123456789"

# Support
NEXT_PUBLIC_SUPPORT_EMAIL="support@aura-commuter.com"
NEXT_PUBLIC_SUPPORT_PHONE="+233123456789"
NEXT_PUBLIC_SUPPORT_WHATSAPP="+233123456789"

# Legal
NEXT_PUBLIC_PRIVACY_POLICY_URL="/privacy"
NEXT_PUBLIC_TERMS_OF_SERVICE_URL="/terms"
NEXT_PUBLIC_COOKIE_POLICY_URL="/cookies"
