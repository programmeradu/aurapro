{
  "name": "AURA Mobile Commuter",
  "short_name": "AURA",
  "description": "Smart transport companion for Ghana commuters - Real-time tracking, journey planning, and community features",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#006B3F",
  "theme_color": "#006B3F",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-GH",
  "dir": "ltr",
  "categories": ["travel", "navigation", "productivity", "social"],
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+aura",
      "url": "/share?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Track Vehicle",
      "short_name": "Track",
      "description": "Find and track nearby vehicles",
      "url": "/track",
      "icons": [
        {
          "src": "/icons/shortcut-track.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Plan Journey",
      "short_name": "Journey",
      "description": "Plan your route and find transport options",
      "url": "/journey",
      "icons": [
        {
          "src": "/icons/shortcut-journey.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Community",
      "short_name": "Community",
      "description": "View reports and community updates",
      "url": "/community",
      "icons": [
        {
          "src": "/icons/shortcut-community.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Report Issue",
      "short_name": "Report",
      "description": "Submit a transport issue or feedback",
      "url": "/community?action=report",
      "icons": [
        {
          "src": "/icons/shortcut-report.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
